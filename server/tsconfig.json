{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es6",
    "lib": ["es2019"],
    "module": "commonjs",
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true
  }
  // "include": ["src/**/*"],
  // "exclude": ["node_modules", "**/*.spec.ts"]
}
